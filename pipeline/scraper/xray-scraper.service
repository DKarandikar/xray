[Unit]
Description=The app scraper for the XRay project

[Service]
Environment=NODE_ENV=production

WorkingDirectory=/usr/local/lib/xray/scraper
ExecStart=/usr/bin/node /usr/local/lib/xray/scraper/scraper.js
#ExecStop=?
User=xray
Group=xray
Restart=on-failure
Type=oneshot

[Install]
Requires=xray-analyzer.service
WantedBy=multi-user.target
